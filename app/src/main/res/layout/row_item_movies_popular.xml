<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="250dp"
    android:background="@color/gray_main"
    >

<xyz.peridy.shimmerlayout.ShimmerLayout
    android:id="@+id/shimmer_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="144dp"
        android:layout_height="210dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="20sp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:background="@color/gray_second"
                    android:id="@+id/image_movies"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:importantForAccessibility="no"
                    android:scaleType="centerCrop" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</xyz.peridy.shimmerlayout.ShimmerLayout>

    <TextView
        android:id="@+id/text_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:fontFamily="@font/montserrat_semibold"
        android:shadowColor="@color/button_native"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="2"
        android:textColor="@color/gray_main"
        android:textSize="82sp"
        android:translationY="132dp"
        android:visibility="gone"
        tools:ignore="NotSibling,VisualLintBounds" />

</RelativeLayout>
