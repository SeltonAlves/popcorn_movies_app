<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_main">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="18dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_poster"
            android:layout_width="95dp"
            android:layout_height="120dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_name_movies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/card"
        android:fontFamily="@font/poppins"
        android:text="Spiderman"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_star"
        android:layout_marginTop="14dp"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_below="@id/text_name_movies"
        android:layout_alignStart="@id/text_name_movies"
        android:src="@drawable/star" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_assessment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image_star"
        android:layout_toEndOf="@id/image_star"
        android:fontFamily="@font/montserrat_semibold"
        android:text="8.5"
        android:textSize="12sp"
        android:layout_marginStart="6dp"
        android:textColor="@color/button_native" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_ticket"
        android:layout_marginTop="14dp"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_below="@id/image_star"
        android:layout_alignStart="@id/image_star"
        android:src="@drawable/ticket" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/text_assessment"
        android:layout_below="@id/text_assessment"
        android:fontFamily="@font/montserrat_semibold"
        android:text="8.5"
        android:textSize="12sp"
        android:textColor="@color/button_native" />

</RelativeLayout>