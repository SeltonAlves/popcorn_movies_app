<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_main">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="18dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_poster"
            android:layout_width="95dp"
            android:layout_height="120dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_name_movies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/card"
        android:text="Spiderman"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_star"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_below="@id/text_name_movies"
        android:layout_alignStart="@id/text_name_movies"
        android:layout_marginTop="14dp"
        android:src="@drawable/star" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_assessment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image_star"
        android:layout_marginStart="6dp"
        android:layout_toEndOf="@id/image_star"
        android:fontFamily="@font/montserrat_semibold"
        android:text="8.5"
        android:textColor="@color/button_native"
        android:textSize="12sp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_ticket"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_below="@id/image_star"
        android:layout_alignStart="@id/image_star"
        android:layout_marginTop="14dp"
        android:src="@drawable/ticket" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_tick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/text_assessment"
        android:layout_alignBottom="@id/image_ticket"
        android:layout_marginStart="6dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="8.5"
        android:textColor="@color/button_native"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/image_calendar"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_below="@id/image_ticket"
        android:layout_alignStart="@id/image_ticket"
        android:src="@drawable/calendarblank"
        android:layout_marginTop="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/text_tick"
        android:layout_alignBottom="@id/image_calendar"
        android:fontFamily="@font/montserrat_semibold"
        android:text="7.8"
        android:textSize="12dp"
        tools:ignore="TextSizeCheck" />
</RelativeLayout>